<div class="flex justify-between">
  <h1 class="text-3xl font-bold text-left ml-20 my-10">その他(日用品・雑貨等)</h1>
</div>
<!-- ここから品名の入力フォーム -->
<div class="mx-10 my-10">
  <h2 class="mt-10">⚪︎チェックリストに追加するものを入力してください</h2>
  <%= form_with model: [@daily_necessity], url: daily_necessities_path, method: :post, local: true do |f| %>
    <div class="flex gap-5 items-end">
      <%= f.label :name, "品名", class: "form-control w-full max-w-xs" do %>
        <div class="label">
          <span class="label-text">品名</span>
        </div>
        <%= f.text_field :name, class: "input input-bordered w-full max-w-xs",placeholder: "入力してください" %>
      <% end %>
      <%= f.submit "追加", class: "btn btn-primary" %>
    </div>
  <% end %>
  <!-- その他必要なもののチェックリスト -->
  <h2 class="mt-10">⚪︎購入するものをチェックしてください</h2>
  <%= form_with model: @daily_necessity_item, local: true do |f| %>
    <%= f.hidden_field :shopping_list_id, value: @shopping_list.id %>
    <div class="form-control grid grid-cols-5 gap-8 mx-12">
      <% @daily_necessities.each do |daily_necessity| %>
        <label class="label cursor-pointer">
          <%= check_box_tag 'daily_necessity_item_ids[]', daily_necessity.id, false, class: "checkbox" %>
          <span class="label-text"><%= daily_necessity.name %></span>
        </label>
      <% end %>
    </div>
    <%= f.submit "登録", class: "btn btn-primary btn-wide my-5" %>
  <% end %>
</div>