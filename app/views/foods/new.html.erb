<div class="flex justify-between">
  <h1 class="text-3xl font-bold text-left ml-20 my-10">食材登録ページ</h1>
</div>
<!-- ここから入力フォーム -->
<%= form_with model: @food, local: true do |form| %>
  <div class="w-1/3 mx-auto">
    <div class="form-control w-full max-w-xs">
      <%= form.label :name, "食品名", class: "label" %>
      <%= form.text_field :name, placeholder: "入力してください", class: "input input-bordered w-full max-w-xs" %>
    </div>
    <div class="form-control w-full max-w-xs">
      <%= form.label :protein, "タンパク質", class: "label" %>
      <%= form.text_field :protein, placeholder: "100gあたりの量(g)", class: "input input-bordered w-full max-w-xs" %>
    </div>
    <div class="form-control w-full max-w-xs">
      <%= form.label :fat, "脂質", class: "label" %>
      <%= form.text_field :fat, placeholder: "100gあたりの量(g)", class: "input input-bordered w-full max-w-xs" %>
    </div>
    <div class="form-control w-full max-w-xs">
      <%= form.label :fat, "炭水化物", class: "label" %>
      <%= form.text_field :carbohydrate, placeholder: "100gあたりの量(g)", class: "input input-bordered w-full max-w-xs" %>
    </div>
    <%= form.submit "登録", class: "btn btn-primary btn-wide my-10 mx-auto" %>
    <%= link_to "一覧に戻る", shopping_lists_path, class: "btn btn-secondary btn-wide my-10 mx-auto" %>
  </div>
<% end %>