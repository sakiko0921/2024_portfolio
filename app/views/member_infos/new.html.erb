<%= render "shared/header_after_login" %>
<div class="flex justify-between">
  <h1 class="text-3xl font-bold text-left ml-20 my-10">基本情報入力</h1>
  <!-- PFCの量を表示するためのコード -->
  <div class="mr-10 mt-5">
    <%= render "shared/nutrient_amount" %>
  </div>
</div>
<!-- ここから入力フォーム -->
<div class="ml-10">
  <div>
    <label class="form-control w-full max-w-xs">
      <div class="label">
        <span class="label-text">買いだめ日数</span>
      </div>
      <select class="select select-bordered">
        <option disabled selected>選択してください</option>
        <option>1日</option>
        <option>2日</option>
        <option>3日</option>
        <option>4日</option>
        <option>5日</option>
      </select>
    </label>
  </div>
  <div class="flex gap-5 mt-5 items-end">
    <label class="form-control w-full max-w-xs">
      <div class="label">
        <span class="label-text">名前</span>
      </div>
      <input type="text" placeholder="入力してください" class="input input-bordered w-full max-w-xs" />
    </label>
    <label class="form-control w-full max-w-xs">
      <div class="label">
        <span class="label-text">性別</span>
      </div>
      <select class="select select-bordered">
        <option disabled selected>選択してください</option>
        <option>女性</option>
        <option>男性</option>
      </select>
    </label>
    <label class="form-control w-full max-w-xs">
      <div class="label">
        <span class="label-text">年齢</span>
      </div>
      <select class="select select-bordered">
        <option disabled selected>選択してください</option>
        <option>・・・</option>
        <option>33</option>
        <option>32</option>
        <option>・・・</option>
      </select>
    </label>
    <button class="btn btn-primary">登録</button>
  </div>
</div>
<!-- ここからメンバーの一覧 -->
<div class="ml-10 mt-10">
  <h1 class="text-2xl text-left ml-10">メンバー一覧</h1>
  <div class="overflow-x-auto">
    <table class="table w-full">
      <thead>
        <tr>
          <th>名前</th>
          <th>性別</th>
          <th>年齢</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>山田太郎</td>
          <td>男性</td>
          <td>33</td>
          <td>
            <button class="btn btn-primary">編集</button>
          </td>
          <td>
            <button class="btn btn-error">削除</button>
          </td>
        </tr>
        <tr>
          <td>山田花子</td>
          <td>女性</td>
          <td>32</td>
          <td>
            <button class="btn btn-primary">編集</button>
          </td>
          <td>
            <button class="btn btn-error">削除</button>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="flex justify-center">
      <button class="btn btn-primary btn-wide my-5 ">次へ</button>
    </div>
  </div>
</div>

